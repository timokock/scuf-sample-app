{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "scripts": {
    "start": "tsnodemon",
    "build": "rm -rf dist && yarn test && tsc",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^4.5.9",
    "@nestjs/core": "^4.5.10",
    "@nestjs/swagger": "^1.2.2",
    "express": "^4.16.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.10"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "@nestjs/testing": "^4.5.5",
    "jest": "^21.2.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "tsnodemon": "^1.1.2",
    "typescript": "^2.8.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "mapCoverage": true,
    "coverageDirectory": "../coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "Controllers/*.ts",
      "Services/*.ts"
    ]
  }
}
